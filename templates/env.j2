# Place this file in $HOME/.confiig/borg/env, that's where the autoborg
# script expects it

# Setting this, so the repo does not need to be given on the commandline:
export BORG_REPO={{brl_borg_remote}}{{brl_borg_path}}/{{brl_borg_subdir}}
{% if brl_borg_encmode | match('^(repokey|keyfile)') %}

# Setting this, so you won't be asked for your repository passphrase:
export BORG_PASSPHRASE='{{brl_borg_password}}'
{% endif %}

export BORG_EXINCLUDEFILE=${HOME}/.config/borg/patterns
{% if brl_borg_condscript is defined %}

export BORG_CONDSCRIPT={{brl_borg_condscript}}
{% endif %}
